<!-- pages/user/index.wxml -->
<view class="container">
    <image class='background' src="../../images/backgroundimg5.jpg" mode="widthFix|aspectFill|heightFix"></image>
    <view class="info-box">
        <view class="userIcon">
            <image src="../../images/usericon.png" mode="widthFix" />
        </view>
        <view class="userInfo">
            <text decode="{{true}}">{{userId}}</text>
        </view>
    </view>
    <view class="history_like">
        <view class="history">浏览历史</view>
        <view class="like">我的喜欢</view>
    </view>
    <view class="other_function">
        <view class="func_list">
            <image src="../../icons/count.png" />
            <text>阅读统计</text>
        </view>
        <view class="func_list">
            <image src="../../icons/question.png" />
            <text>问题反馈</text>
        </view>
        <view class="func_list">
            <image src="../../icons/setting.png" />
            <text>设置</text>
        </view>
    </view>
    <view class="changeId">
        <button type="default" bindtap="changeId">切换账户</button>
    </view>
</view>